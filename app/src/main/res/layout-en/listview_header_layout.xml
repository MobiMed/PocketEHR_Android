<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/body_part_image_front"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:paddingTop="5dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:src="@drawable/male_small_body_parts"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/body_part_image_back"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:paddingTop="5dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:src="@drawable/male_small_body_parts"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:onClick="showVitals"
                android:src="@drawable/selector_addnote" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:text="@string/add_notes_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:onClick="addPicture"
                android:src="@drawable/selector_addimage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:text="@string/add_picture_button" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_image_note_string"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>