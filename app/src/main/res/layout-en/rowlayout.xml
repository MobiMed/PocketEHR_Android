<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="4dp">


    <LinearLayout
        android:id="@+id/patient_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="@drawable/textview_male_border">

        <TextView
            android:id="@+id/patient_name_placeholder"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lines="1"
            android:text="Aditya Nenawati"
            android:scrollHorizontally="true"
            android:ellipsize="middle"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details_rowlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/details_background_admit">

        <ImageView
            android:id="@+id/test_status_placeholder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/ic_test_report"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/date_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="07/14/15"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginLeft="6dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/event_status_placeholder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="11dp"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/event_location_placeholder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="27dp"
            android:src="@drawable/ic_maternity"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>
