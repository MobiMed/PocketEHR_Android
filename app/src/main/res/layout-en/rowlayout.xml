<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/patient_name_placeholder"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="middle"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/test_status_placeholder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/date_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="07/14/15"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/event_status_placeholder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/event_location_placeholder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp" />
</LinearLayout>
