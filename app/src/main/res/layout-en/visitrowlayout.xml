<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="4dp"
    android:id="@+id/visit_rowlayout"
    android:background="@drawable/details_background_admit">


    <TextView
        android:id="@+id/date_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="07/14/15"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginLeft="6dp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/test_status_placeholder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/ic_test_report"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/event_status_placeholder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/event_location_placeholder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/ic_maternity"
        android:layout_gravity="center_vertical|right" />
</LinearLayout>
