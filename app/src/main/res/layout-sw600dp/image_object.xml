<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/body_part_image"
            android:layout_width="wrap_content"
            android:layout_height="750dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/reverse_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_reverse" />

        <RelativeLayout
            android:id="@+id/next_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/submit_button"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="saveAndFinish"
                android:src="@drawable/selector_submit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="28dp"
                android:text="@string/submit_button" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cancel_button_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="180dp"
            android:gravity="bottom"
            android:visibility="gone">

            <ImageView
                android:id="@+id/cancel_button"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:onClick="closeProfileView"
                android:src="@drawable/selector_cancel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/cancel_button" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>