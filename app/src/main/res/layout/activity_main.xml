<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_patient_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_patient"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="showPatientList"
            android:src="@drawable/home_patients" />

        <TextView
            android:id="@+id/patient_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/home_patient_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/main_patient_layout">

        <ImageView
            android:id="@+id/add_patient"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="addPatient"
            android:src="@drawable/add_patient" />

        <TextView
            android:id="@+id/add_patient_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:text="@string/home_add_patient_text" />
    </LinearLayout>
</RelativeLayout>
